<style>
    .container {
            display: flex;
            justify-content: space-between;
            max-width: 1200px;
            height: calc(100vh - 100px);
            margin: 0 auto;
            padding: 0 20px;
            margin-top: 6.25rem;
        }

        .contenido {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 60px;
            width: 100%;
        }

        .texto {
        }

        .imagen {
            text-align: center;
        }

        .imagen img {
            width: 100%;
            height: auto;
            max-width: 500px;
            min-width: 410px;
            border-radius: 8px;
        }

        .title-1 {
            font-size: 2.5rem;
            margin-bottom: 30px;
            color: var(--color-title);
        }

        .title-2 {
            font-size: 3rem;
            margin-bottom: 20px;
            color: var(--color-title);
        }

        p {
            font-size: 1.1rem;
            margin-bottom: 30px;
            color: var(--color-text);
        }

        .botones {
            display: flex;
            gap: 15px;
        }

        @media (max-width: 990px) {
            .container {
                height: auto;
            }
            .contenido {
                flex-direction: column;
                padding-top: 2rem;
            }

            .texto {
                order: 1;
                text-align: center;
            }

            .imagen {
                order: 2;
            }

            .title-1 {
            font-size: 2rem;
        }

        .title-2 {
            font-size: 2.5rem;
        }

            .botones {
                align-items: center;
                flex-direction: column;
                max-width: 300px;
                margin: 0 auto;
            }
        }
        @media (max-width: 480px) {
            .title-1 {
            font-size: 1.6rem;
            font-weight: 900;
            }

            .title-2 {
            font-size: 1.9rem;
            font-weight: 900;
            }

            .imagen img {
                width: 100%;
                min-width: 0px;
            }
        }
</style>