const pdfPath = "/public/assets/cv-brian.pdf"
---

<section class="container">
    <div class="contenido">
        <div class="texto">
            <h2 class="title-1">ðŸ‘‹ Soy Brian Exequiel</h2>
            <h3 class="title-2">Desarrollador Web</h3>
            <p>Transformo ideas en negocios digitales Ãºnicos, integrando desarrollo, diseÃ±o y marketing para crear experiencias que destacan.</p>
            <div class="botones">
                <Button 
