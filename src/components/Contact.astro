---
import { Image } from "astro:assets"
import MeetingImg from "../assets/meeting.png"
import Button from "../components/Button.astro"
import { getLangFromUrl, useTranslations } from "../i18n/utils"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section class="container-contact" id="contact">
    <div class="container-img">
        <Image src={MeetingImg} alt="" />
    </div>
    <div class="container-text">
        <h3 class="title">{t("contact.title")}</h3>
        <form
            class="form"
            action="https://formsubmit.co/ajax/brianexequielputallaz@gmail.com"
            method="POST"
            id="contact-form"
        >
            <label class="label" for="name">{t("contact.name")}</label>
            <input
                class="input"
                type="text"
                name="name"
                id="name"
                required
                placeholder={t("contact.name.placeholder")}
            />

            <label class="label" for="email">Email:</label>
            <input
                class="input"
                type="email"
                name="email"
                id="email"
                required
                placeholder={t("contact.email.placeholder")}
            />

            <label class="label" for="message">{t("contact.message")}</label>
            <textarea
                class="input textarea"
                name="message"
                id="message"
                required
                placeholder={t("contact.message.placeholder")}
            ></textarea>

            <input type="hidden" name="_captcha" value="false" />

            <div class="button">
                <button class="btn" type="submit">
                    {t("contact.button.form")}
                </button>
            </div>
        </form>

        <!-- MENSAJE DE Ã‰XITO -->
<p id="success-message" class="success-message hidden">
    ðŸŽ‰ Tu mensaje se ha enviado con Ã©xito. A la brevedad me estarÃ© comunicando contigo.
</p>
    </div>
</section>

<style>
    .container-contact {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 4em;
        width: 100%;
        height: 100vh;
        padding-inline: 1rem;
        scroll-margin-top: 30px;
    }
    .container-img {
        width: 50%;
    }
    .container-text {
        width: 50%;
    }
    .title {
        font-size: 2em;
        font-weight: 600;
        margin-bottom: 2em;
        color: var(--color-title);
    }
    .form {
        width: calc(100% - 1em);
    }
    .label {
        margin-bottom: 0.2em;
        color: var(--color-title);
    }
    .input {
        width: 100%;
        height: 1em;
        border: 1px solid #d0d5dd;
        background: #fff;
        border-radius: 4px;
        margin-bottom: 2em;
        padding: 0.5em;
        color: var(--color-text);
        background-color: var(--bg-color);
    }
    .input::placeholder {
        color: #c2c2c2;
        font-weight: 400;
        font-size: 0.8em;
    }
    .textarea {
        height: 200px;
        background-color: var(--bg-color);
    }
    .button {
        display: flex;
        justify-content: center;
        width: calc(100% + 1em);
    }

    .btn {
        width: 100%; /* Cambiado de 50% a auto */
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        border: none;
        position: relative;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(
            45deg,
            #6604fd 0%,
            #fd003c 50%,
            #fdba01 100%
        );
        color: white;

    }

    .btn:hover {
        transform: scale(0.98);
    }

    .btn:active {
        transform: scale(0.95);
    }
    .success-message {
    margin-top: 1.5em;
    padding: 1em;
    background-color: #dff0d8;
    color: #3c763d;
    border-radius: 6px;
    font-size: 1rem;
    text-align: center;
    animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-5px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.hidden {
    display: none;
}
    @media (max-width: 880px) {
        .container-contact {
            padding-inline: 0;
        }
        .container-img {
            display: none;
        }
        .container-text {
            margin: 0 auto;
            width: 80%;
        }
        .title {
            text-align: center;
        }
    }
</style>

<script>
    const form = document.getElementById("contact-form");
    const message = document.getElementById("success-message");

    form.addEventListener("submit", function (e) {
        e.preventDefault();

        const data = new FormData(form);

        fetch(form.action, {
            method: "POST",
            body: data,
            headers: {
                Accept: "application/json",
            },
        }).then((response) => {
            if (response.ok) {
                message.classList.remove("hidden");
                form.reset();

                setTimeout(() => {
                    message.classList.add("hidden");
                }, 5000);
            } else {
                alert("OcurriÃ³ un error. IntentÃ¡ de nuevo.");
            }
        });
    });
</script>