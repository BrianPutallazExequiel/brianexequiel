---
import { Image } from "astro:assets"
import MeetingImg from "../assets/meeting.png"
import Button from "../components/Button.astro"
import { getLangFromUrl, useTranslations } from "../i18n/utils"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section class="container-contact" id="contact">
    <div class="container-img">
        <Image src={MeetingImg} alt="" />
    </div>
    <div class="container-text">
        <h3 class="title">{t("contact.title")}</h3>
        <form class="form">
            <label class="label" for="name">{t("contact.name")}</label>
            <input
                class="input"
                type="text"
                id="name"
                placeholder={t("contact.name.placeholder")}
            />
            <label class="label" for="email">Email:</label>
            <input
                class="input"
                type="email"
                id="email"
                placeholder={t("contact.email.placeholder")}
            />
            <label class="label" for="message">{t("contact.message")}</label>
            <textarea
                class="input textarea"
                id="message"
                placeholder={t("contact.message.placeholder")}
            ></textarea>
        </form>
        <div class="button">
            <Button
                variant="primary"
                title={t("contact.button.form")}
                href="#contacto"
            />
        </div>
    </div>
</section>

<style>
    .container-contact {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 4em;
        width: 100%;
        height: 100vh;
        padding-inline: 1rem;
        scroll-margin-top: 30px;
    }
    .container-img {
        width: 50%;
    }
    .container-text {
        width: 50%;
    }
    .title {
        font-size: 2em;
        font-weight: 600;
        margin-bottom: 2em;
        color: var(--color-title);
    }
    .form {
        width: calc(100% - 1em);
    }
    .label {
        margin-bottom: 0.2em;
        color: var(--color-title);
    }
    .input {
        width: 100%;
        height: 1em;
        border: 1px solid #d0d5dd;
        background: #fff;
        border-radius: 4px;
        margin-bottom: 2em;
        padding: 0.5em;
        color: var(--color-text);
        background-color: var(--bg-color);
    }
    .input::placeholder {
        color: #c2c2c2;
        font-weight: 400;
        font-size: 0.8em;
    }
    .textarea {
        height: 200px;
        background-color: var(--bg-color);
    }
    @media (max-width: 880px) {
        .container-contact {
            padding-inline: 0;
        }
        .container-img {
            display: none;
        }
        .container-text {
            margin: 0 auto;
            width: 80%;
        }
        .title {
            text-align: center;
        }
        .button {
            display: flex;
            justify-content: center;
            width: 100%;
            margin: 0 auto;
        }
    }
</style>
